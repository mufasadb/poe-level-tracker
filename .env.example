# Discord Bot Token (RECOMMENDED - enables bot commands)
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# OR Discord Webhook URL (LEGACY - for webhook-only mode)
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

# Check interval in seconds (default: 300 = 5 minutes)
CHECK_INTERVAL=300

# Monitored leagues (comma-separated)
MONITORED_LEAGUES=Standard,Hardcore,Settlers

# Initial account names to track (optional - can also add via Discord commands)
# TRACKED_ACCOUNTS=account1#1234,account2#5678